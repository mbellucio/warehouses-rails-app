<div>

  <% if supplier.errors.any? %>
    <p>Verify the errors bellow:</p>
    <ul>
      <% supplier.errors.full_messages.each do |err| %>
        <li><%= err %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: supplier do |f| %>
    <div>
      <%= f.label :corporate_name%>
      <%= f.text_field :corporate_name %>
    </div>
    <div>
      <%= f.label :brand_name%>
      <%= f.text_field :brand_name %>
    </div>
    <div>
      <%= f.label :registration_number%>
      <%= f.text_field :registration_number %>
    </div>
    <div>
      <%= f.label :adress%>
      <%= f.text_field :adress %>
    </div>
    <div>
      <%= f.label :city%>
      <%= f.text_field :city %>
    </div>
    <div>
      <%= f.label :state%>
      <%= f.text_field :state %>
    </div>
    <div>
      <%= f.label :email%>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.submit "Save"%>
    </div>
  <% end %>
</div>