<section id="warehouses">
  <h1>Warehouses</h1>

  <div class="center">
    <%= link_to 'Register Warehouse', new_warehouse_path%>
  </div>

  <% @warehouses.each do |warehouse| %>
    <div id="warehouse">
      <div>
        <h3><%= link_to "#{warehouse.name}", warehouse_path(warehouse.id)%></h3>
        <dl>
          <dt>CÃ³digo:</dt>
          <dd><%= warehouse.code%></dd>
          <dt>Cidade:</dt>
          <dd><%= warehouse.city %></dd>
          <dt>Area:</dt>
          <dd><%= warehouse.area%> m2</dd>
        </dl>
      </div>
    </div>
  <% end %>

  <% if @warehouses.empty? %>
    <p>There are no registered warehouses</p>
  <% end %>
</section>
