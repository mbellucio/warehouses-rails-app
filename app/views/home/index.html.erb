<section id="warehouses">
  <div><%= I18n.translate("hello") %></div>
  <div><%= I18n.localize(Date.today) %></div>
  <div class="center">
    <%= link_to 'Register Warehouse', new_warehouse_path%>
  </div>

  <% @warehouses.each do |warehouse| %>
    <div id="warehouse">
      <div>
        <h3><%= link_to "#{warehouse.name} Airport", warehouse_path(warehouse.id)%></h3>
        <dl>
          <dt>CÃ³digo:</dt>
          <dd><%= warehouse.code%></dd>
          <dt>Cidade:</dt>
          <dd><%= warehouse.city %></dd>
          <dt>Area:</dt>
          <dd><%= warehouse.area%> m2</dd>
        </dl>
      </div>
    </div>
  <% end %>

  <% if @warehouses.empty? %>
