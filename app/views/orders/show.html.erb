<div>
  <h1>Order Details</h1>
  <hr>
  <%= render @order %>
  <%= link_to 'Edit', edit_order_path(@order.id) %>
  
  <div>
    <h2>Order items</h2>
    <%= link_to 'Add item', new_order_order_item_path(@order.id) %>
    <div>
      <% @order.order_items.each do |order_item| %>
        <p><%= "#{order_item.quantity} x #{order_item.product_model.name}" %></p>
      <% end %>
    </div>
  </div>


  <% if @order.pending? %>
    <%= button_to 'Set as delivered', delivered_order_path(@order.id) %>
    <%= button_to 'Set as canceled', canceled_order_path(@order.id) %>
  <% end %>
  
</div>
